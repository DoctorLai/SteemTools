{
  "manifest_version": 2,
  "name": "Steem Tools",
  "short_name": "steemtools",  
  "default_locale": "en",
  "version": "0.0.13",
  "browser_action": {
     "default_icon": "icon.png",
     "default_title": "Steem Tools",
     "default_popup": "main.html"
  },
  "author": "justyy<dr.zhihua.lai@gmail.com>",
  "icons": {
    "16": "images/icon-16.png",
    "32": "images/icon-32.png",
    "48": "images/icon-48.png",
    "128": "images/icon-128.png"
  },  
  "update_url":"http://clients2.google.com/service/update2/crx",
  "description": "This is a Chrome Extension that has a few SteemIt Tools.",
  "web_accessible_resources": [
  		"js/*", 
  		"images/*",
      "css/*",
  		"bs/*"
  ],
  "content_security_policy": "connect-src https://*; script-src 'self' 'unsafe-eval'; object-src 'self'",
  "background": {
    "scripts": [
        "js/background.js", 
        "js/context.js"
    ]
  },  
  "content_scripts": [{
      "matches": ["<all_urls>"],
      "js":[
          "js/content.js"
      ],
      "run_at":"document_idle"
  }],
  "permissions": [
     "activeTab",
     "storage",
     "tabs",
     "contextMenus",
     "<all_urls>"
  ]
}
